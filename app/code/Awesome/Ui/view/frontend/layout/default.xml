<?xml version="1.0"?>
<page>
    <head>
        <script src="Awesome_Ui::menu.js"/>
        <script src="Awesome_Ui::message.js"/>
        <css src="Awesome_Ui::menu.css"/>
        <css src="Awesome_Ui::message.css"/>
    </head>
    <body>
        <block name="menu" class="Awesome\Ui\Block\Menu" template="Awesome_Ui::menu.phtml" sortOrder="1"/>
        <referenceBlock name="page-wrapper">
            <referenceBlock name="header">
                <block name="menu-toggler" class="Awesome\Base\Block\Template" template="Awesome_Ui::menu/menu_toggler.phtml"/>
            </referenceBlock>
            <block name="menu-overlay"
                   class="Awesome\Base\Block\Template"
                   template="Awesome_Ui::menu/menu_overlay.phtml"
                   sortOrder="2"
            />
        </referenceBlock>
        <referenceBlock name="js-init-section">
            <block name="menu-init" class="Awesome\Base\Block\Template" template="Awesome_Ui::menu/menu_init.phtml"/>
            <block name="message-init" class="Awesome\Base\Block\Template" template="Awesome_Ui::message/message_init.phtml"/>
        </referenceBlock>
    </body>
</page>
