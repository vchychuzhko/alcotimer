<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="../../../../Framework/Schema/page_layout.xsd">
    <head>
        <favicon src="images/favicon.png"/>
        <lib src="lib/jquery/jquery.min.js"/>
        <lib src="lib/jquery/jquery-ui.min.js"/>
        <script src="Awesome_Framework::base.js"/>
        <css src="Awesome_Framework::base.css"/>
        <css src="Awesome_Frontend::header.css"/>
        <css src="Awesome_Frontend::footer.css"/>
    </head>
    <body>
        <container name="page-wrapper" htmlTag="main" htmlClass="page-wrapper" sortOrder="5">
            <block name="header"
                   class="Awesome\Framework\Block\Template"
                   template="Awesome_Frontend::header.phtml"
                   sortOrder="1"/>
            <block name="footer"
                   class="Awesome\Framework\Block\Template"
                   template="Awesome_Frontend::footer.phtml"
                   sortOrder="10"/>
        </container>
        <container name="js-init-section" sortOrder="10"/>
    </body>
</page>
