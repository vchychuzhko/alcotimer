<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="../../../../Frontend/Schema/page_layout.xsd">
    <head>
        <title><![CDATA[Audio Spectrum]]></title>
        <description><![CDATA[Web app to visualize your music in real time.]]></description>
        <keywords translate="false"><![CDATA[AlcoTimer,Visualizer,Audio,Spectrum,Visualization,Visualize,Music,Podcast]]></keywords>
        <remove src="Awesome_Frontend/css/menu.css"/>
    </head>
    <body>
        <referenceBlock name="menu" remove="true"/>
        <referenceContainer name="page-wrapper">
            <referenceBlock name="header" remove="true"/>
            <referenceBlock name="menu-overlay" remove="true"/>
            <block name="visualizer.content"
                   class="Awesome\Visualizer\Block\Visualizer"
                   template="Awesome_Visualizer::visualizer.phtml"
                   sortOrder="5"/>
            <referenceBlock name="footer" remove="true"/>
        </referenceContainer>
        <referenceContainer name="popup-init-section" remove="true"/>
    </body>
</page>
