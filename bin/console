#!/usr/bin/env php
<?php

if (PHP_SAPI !== 'cli') {
    echo 'bin/console must be run as a CLI application';
    exit(1);
}

try {
    require_once __DIR__ . '/../app/bootstrap.php';
} catch (\Exception $e) {
    echo 'Autoload error: ' . $e->getMessage();
    exit(1);
}

try {
    $application = new \Awesome\Framework\App\Cli();
    $application->run();
} catch (\Exception $e) {
    while ($e) {
        echo $e->getMessage();
        echo "\n";
        echo $e->getTraceAsString();
        echo "\n\n";
        $e = $e->getPrevious();
    }
    exit(1);
}
